modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=/home/runner/workspace streamlit run Home.py --server.port=3000 --server.address=0.0.0.0 --server.allowRunOnSave=true --server.headless=true"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd /home/runner/workspace && PYTHONPATH=/home/runner/workspace streamlit run Home.py --server.port=3000 --server.address=0.0.0.0 --server.headless=true"]
